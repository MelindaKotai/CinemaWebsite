@{
}



<div class="container bg-dark p-5" style="border-radius:15px;">

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
    }

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-info">@ViewBag.Message</div>
    }


    @if (ViewBag.SuccesMessage != null)
    {
        <div class="alert alert-success">@ViewBag.SuccesMessage</div>
    }

    <h2 class="text-center">Sunteti sigur ca doriti sa stergeti aceast utilizator?</h2>
    Nume:@Model.FirstName
    <br />
    Prenume:@Model.LastName
    <br />
    Email:@Model.Email
    <br />
    Tlefon:@Model.PhoneNumber


    <h5 class="text-center">
        Daca stergeti acest utilizator toate datele aferente contului vor fi pierdute!
    </h5>
    <br />
    <br />


    <h5 class="text-center">Stergeti?</h5>
    <form class="text-center" action="/User/Delete/@Model.id" method="post">
        <button type="submit" class="btn btn-danger">Da</button>
    </form>
    <br />

    <div class="text-center"><a class="btn btn-danger" href="/User/List">Nu</a></div>

</div>