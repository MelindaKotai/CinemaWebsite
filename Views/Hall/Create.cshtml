@{
}
@model Licenta.ViewModels.CreateHallViewModel;


<div class="container col-7 p-5 form">
    <form asp-action="Create" asp-controller="Hall" method="post" id="createhallform">
        <div class="error"></div>
        <div class="form-group">
            <label asp-for="name" class="control-label"></label>
            <input asp-for="name" class="form-control" required />
            <span asp-validation-for="name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="rows" class="control-label"></label>
            <input asp-for="rows" class="form-control" required min="0" />
            <span asp-validation-for="rows" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="cols" class="control-label"></label>
            <input asp-for="cols" class="form-control" required min="0" />
            <span asp-validation-for="cols" class="text-danger"></span>
        </div>


        <input asp-for="paths" type="hidden" class="form-control" />
        <div class="btn btn-danger" id="generate">Generati matricea salii</div>
        <div id="matrix"></div>




    </form>
    @section Scripts{
        <script type="text/javascript" src="~/js/HallCreate.js" asp-append-version="true"></script>
    }
</div>
