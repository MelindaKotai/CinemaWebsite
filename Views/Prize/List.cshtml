@{
    ViewData["Title"] = "Prizes List";
}


@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

@if (ViewBag.SuccesMessage != null)
{
    <div class="alert alert-success">@ViewBag.SuccesMessage</div>
}


<a href="/Prize/Create" class="btn btn-danger">Creează un premiu nou</a>

@if (Model != null)
{
    @if (Model.Count != 0)
    {

        <br />
        <br />
        <div class="result"></div>

        <div class="ofx">
            <table class="table table-dark table-bordered">
                <thead><tr><th scope="col">Nume</th><th class="text-center" scope="col">Activ</th><th class="text-center" scope="col">Acțiune</th></tr></thead>

                @foreach (var prize in Model)
                {
                    <tr>
                        <td>
                            @prize.name
                        </td>

                        <td>
                            @if (prize.active == false)
                            {
                                <select class="status" name="active">
                                    <option value="@prize.Id">Activ</option>
                                    <option value="@prize.Id" selected>Inactiv</option>
                                </select>

                            }
                            else
                            {
                                <select class="status" name="active">
                                    <option value="@prize.Id" selected>Activ</option>
                                    <option value="@prize.Id">Inactiv</option>
                                </select>

                            }
                        </td>
                        <td>
                            <a class="btn btn-danger" style="word-break:normal" href="/Prize/Update/@prize.Id">Editează</a>
                        </td>
                    </tr>
                }
            </table>
        </div>

        @section Scripts{
            <script type="text/javascript" src="~/js/PrizeList.js" asp-append-version="true"></script>
        }
    }
}




