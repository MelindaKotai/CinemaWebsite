@{
}

@model Licenta.ViewModels.TicketTypesViewModel
@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}


<div class="container col-sm-7 p-5 form" >
    <form asp-action="Create" asp-controller="TicketTypes" method="post">
        <div class="form-group">
            <label asp-for="name"></label>
            <input asp-for="name" class="form-control" />
            <span asp-validation-for="name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="discount"></label>
            <input asp-for="discount" class="form-control" />
            <span asp-validation-for="discount" class="text-danger"></span>
        </div>



        <br />
        <br />
        <button type="submit" class="btn btn-danger">Creati</button>
    </form>
</div>
