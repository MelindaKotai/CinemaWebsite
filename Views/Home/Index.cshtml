@{
    ViewData["Title"] = "Home";
}

@section Css{
    <link rel="stylesheet" href="~/css/HomePage.css" asp-append-version="true">
}

@model List<Licenta.ViewModels.HomePageViewModel>
@using System.Globalization
@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager

@{
    CultureInfo culture = CultureInfo.CreateSpecificCulture("ro-RO");
}

@section OuterContainer{
    <div class="text-center efect" style="padding-top:130px;-webkit-text-stroke: 1px black;">
        <h1>Faceți acum o rezervare la unul din cele mai noi filme apărute!</h1>
        <h3>Vedeți programul nostru aici și bucurați-vă de toate serviciile disponibile</h3>
        <br />
        <br />
        <a href="/Screening/date=@DateTime.Now.ToString("yyyy-MM-dd")"> <div class="btn btn-primary" style="-webkit-text-stroke: 0px;">Program</div></a>
    </div>
}

<div class="text-center">
    <div class="row">
        <div class="col-md-7">
            <h2>Vedeți cele mai noi filme apărute!</h2>
            <hr color="red" />
            <div class="slideshow-container">
                @foreach (var movie in Model)
                {
                    <div class="mySlides efect">
                        <a href="/Movie/@movie.id"><img src="@movie.imgpath" style="height:30em"></a>

                        <div class="text">
                            @movie.title
                            <br />
                            Data apariției: @movie.release_date.ToString("dd-MMMM-yyyy", culture)
                        </div>
                    </div>
                }
                <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                <a class="next" onclick="plusSlides(1)">&#10095;</a>
            </div>
            <br/>
        </div>

        <div class="col-md-5 description">
            <p>
                Cinematograful nostru dispune de toate facilitățile necesare pentru o experiență cinematografică inedită sau o ieșire în oras relaxantă și interesantă cu prietenii sau cu familia. Sălile de cinema sunt dotate cu
                cele mai noi și performante sisteme de proiecție și de sunet și de asemenea cu scaune ce oferă maximul de confort și loc suficient pentru a vă întinde picioarele.
            </p>

            <p> Puteți să va bucurați de un popcorn proaspăt și cald, de o varietate mare de sucuri și de cele mai delicioase snaks-uri în timpul filmului datorită barului din incinta cinematografului care este deschis în intervalul orar 9:00-23:00.</p>

            <p> Tehnologia 3D de ultimă generație vă permite să intrați în universul magic al filmelor și să trăiți cu o intensitate mare experiențele personajelor. </p>
            <p> Tot ce trebuie să faci este să alegi un film și să iți faci o rezervare iar noi te vom aștepta cu toate aceste lucruri pregătite! </p>
            <br />
            <br />
        </div>
    </div>
    <div style="clear:both;margin-top:50px;"></div>

    <h2>Galerie foto</h2>

    <br />
    <hr color="red">
    <br />

    <div style="clear:both;margin-top:50px;"></div>

    <div class="slideshow-container">
        <div class="mySlides2 efect">
            <img src="~/cinema.jpg" style="width:100%" class="align-self-center">
        </div>

        <div class="mySlides2 efect">
            <img src="~/cinema2.jpg" style="width:100%">
        </div>

        <div class="mySlides2 efect">
            <img src="~/cinema6.jpg" style="width:100%">
        </div>

        <div class="mySlides2 efect">
            <img src="~/cinema4.jpg" style="width:100%">
        </div>

        <div class="mySlides2 efect">
            <img src="~/MovieTheatre.png" style="width:100%">
        </div>

        <div class="mySlides2 efect">
            <img src="~/cinema7.jpeg" style="width:100%">
        </div>

        <a class="prev" onclick="plusSlides2(-1)">❮</a>
        <a class="next" onclick="plusSlides2(1)">❯</a>
    </div>

    <br />
    <br />
    <br />

    @if (!SignInManager.IsSignedIn(User))
    {
        <h6 class="alert alert-danger"> Noi răsplătim clienții fideli, de aceea dacă iți faci un cont poți de asemenea beneficia de tombola noastră de premii! </h6>
    }
</div>


@section Scripts{
    <script type="text/javascript" src="~/js/HomePage.js" asp-append-version="true"></script>
}